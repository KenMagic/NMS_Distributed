<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FUNewsManagement_FE</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-..." crossorigin="anonymous" />
  
    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<style>
    .toast {
        background-color: #333;
        color: white;
        padding: 0.5rem 1rem;
        margin-bottom: 0.5rem;
        border-radius: 0.25rem;
        box-shadow: 0 0 10px rgba(0,0,0,0.2);
    }

</style>
<body>
    <div class = "" id="notificationContainer"></div>
    <!-- Loading Indicator -->
    @if (Context.Items["IsOffline"] as bool? == true)
    {
        <div style="background-color:orange;text-align:center;padding:5px;">
            Offline Mode: API not reachable. CRUD disabled.
        </div>
    }

    <div id="loading" style="display:none; position:fixed; top:0; left:0; width:100%; height:100%;
     background:rgba(0,0,0,0.5); z-index:9999; text-align:center; padding-top:20%;">
        <div style="display:inline-block; background:white; padding:20px; border-radius:10px;">
            <span>Loading...</span>
        </div>
    </div>

    <div class="container mt-3">
        @RenderBody()
    </div>

    <!-- Bootstrap JS Bundle (Popper + JS) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-..." crossorigin="anonymous"></script>
    @RenderSection("Scripts", required: false)

    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.0/signalr.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <script>
        // Kết nối SignalR
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/hubs/notifications")
            .withAutomaticReconnect()
            .build();

        const container = document.getElementById("notificationContainer");

                connection.on("ReceiveNotification", function (message) {
            toastr.options = {
                "closeButton": true,    
                "progressBar": false,    
                "timeOut": 0,            
                "extendedTimeOut": 0,
                "tapToDismiss": false,    
                "positionClass": "toast-top-right"
            };
            toastr.info(message);
        });

        connection.start().catch(err => console.error(err));
    </script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        // Khi bất cứ AJAX request nào bắt đầu
        $(document).ajaxStart(function() {
            $("#loading").show();
        });

        // Khi AJAX request kết thúc
        $(document).ajaxStop(function() {
            $("#loading").hide();
        });

        // Optional: khi AJAX lỗi
        $(document).ajaxError(function() {
            $("#loading").hide();
            alert("Something went wrong!");
        });
    </script>
    <script>
        $(function () {
            var message = '@TempData["ToastMessage"]';
            var type = '@TempData["ToastType"]';
            if (message) {
                toastr.options.closeButton = true;
                toastr.options.progressBar = true;
                switch (type) {
                    case "success": toastr.success(message); break;
                    case "error": toastr.error(message); break;
                    case "info": toastr.info(message); break;
                    case "warning": toastr.warning(message); break;
                }
            }
        });
    </script>
</body>
</html>
