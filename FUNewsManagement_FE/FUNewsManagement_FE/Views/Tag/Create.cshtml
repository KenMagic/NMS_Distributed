@model FUNewsManagement_FE.Controllers.TagController.TagDto
@{
    ViewData["Title"] = "Create Tag";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<h2>Create Tag</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="TagName" class="form-label">Tag Name</label>
        <input asp-for="TagName" class="form-control" required />
        <span asp-validation-for="TagName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Note" class="form-label">Note</label>
        <input asp-for="Note" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

