@model FUNewsManagement_FE.Controllers.NewsController.NewsArticleDto
@using static FUNewsManagement_FE.Controllers.NewsController
@{
    ViewData["Title"] = string.IsNullOrEmpty(Model.NewsArticleId) ? "Create News" : "Edit News";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<h2>@ViewData["Title"]</h2>

<form asp-action="Save" method="post">
    <input type="hidden" asp-for="NewsArticleId" />

    <div class="mb-3">
        <label asp-for="NewsTitle" class="form-label">Title</label>
        <input asp-for="NewsTitle" class="form-control" required value="@Model.NewsTitle"/>
    </div>

    <div class="mb-3">
        <label asp-for="Headline" class="form-label">Headline</label>
        <input asp-for="Headline" class="form-control" value="@Model.Headline"/>
    </div>

    <div class="mb-3">
        <label asp-for="NewsContent" class="form-label">Content</label>
        <textarea asp-for="NewsContent" class="form-control" rows="5">@Model.NewsContent</textarea>
    </div>

    <div class="mb-3">
        <label asp-for="NewsSource" class="form-label">Source</label>
        <input asp-for="NewsSource" class="form-control" value="@Model.NewsSource"/>
    </div>

    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label">Category</label>
        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select" required></select>
    </div>

    <div class="mb-3">
        <label asp-for="NewsStatus" class="form-label">Status</label>
        <select asp-for="NewsStatus" asp-items="ViewBag.StatusList" class="form-select"></select>
    </div>

    <div class="mb-2">
        <label>Tags</label>
        <select asp-for="TagIds" class="form-select" multiple>
            @foreach (var t in ViewBag.Tags as List<FUNewsManagement_FE.Controllers.NewsController.TagDto>)
            {
                <option value="@t.TagId" selected="@(Model.TagIds.Contains(t.TagId))">@t.TagName</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
