@model List<AuditLogDto>
<h2>Audit Logs</h2>

<form method="get" class="mb-3">
    <input type="text" name="filterUser" placeholder="User" class="form-control d-inline w-auto" />
    <input type="text" name="filterEntity" placeholder="Entity" class="form-control d-inline w-auto" />
    <button type="submit" class="btn btn-primary">Filter</button>
</form>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>User</th>
            <th>Action</th>
            <th>Entity</th>
            <th>Timestamp</th>
            <th>Before</th>
            <th>After</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model)
        {
            <tr>
                <td>@log.Id</td>
                <td>@log.UserName</td>
                <td>@log.Action</td>
                <td>@log.EntityName</td>
                <td>@log.Timestamp?.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td><pre>@log.BeforeData</pre></td>
                <td><pre>@log.AfterData</pre></td>
            </tr>
        }
    </tbody>
</table>
