@using static FUNewsManagement_FE.Controllers.AccountController
@model AccountCreateUpdateDto
@{
    ViewData["Title"] = "Edit Account";
    var accountId = ViewBag.AccountId;
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Edit Account</h2>

<form method="post" class="w-50">
    <div class="mb-3">
        <label>Name</label>
        <input asp-for="AccountName" class="form-control" />
        <span asp-validation-for="AccountName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label>Email</label>
        <input asp-for="AccountEmail" class="form-control" type="email" />
        <span asp-validation-for="AccountEmail" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label>Role</label>
        <select asp-for="AccountRole" asp-items="ViewBag.Roles" class="form-select"></select>
        <span asp-validation-for="AccountRole" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>New Password (leave blank to keep current)</label>
        <input asp-for="AccountPassword" class="form-control" type="password" />
        <span asp-validation-for="AccountPassword" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label>Current Password (required if changing password)</label>
        <input name="currentPassword" class="form-control" type="password" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>


